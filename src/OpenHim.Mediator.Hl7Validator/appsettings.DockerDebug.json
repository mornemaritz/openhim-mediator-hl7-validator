{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "mediatorconfig": {
    "openHimAuth": {
      "username": "root@openhim.org",
      "trustSelfSigned": true
    },
    "mediatorCore": {
      "openHimCoreHost": "https://openhim-core:8080",
      "openHimCoreAuthPath": "authenticate",
      "openHimRegisterMediatorPath": "mediators",
      "openHimheartbeatpath": "heartbeat",
      "heartbeatEnabled": true,
      "heartbeatInterval": 10
    },
    "mediatorSetup": {
      "urn": "urn:uuid:hl7-validator",
      "version": "0.0.8",
      "name": "HL7 Validator Mediator",
      "description": "HL7 Validator Mediator",
      "defaultChannelConfig": [
        {
          "name": "Validator Mediator Channel",
          "urlPattern": "^/validatorMediator$",
          "type": "http",
          "methods": [
            "POST"
          ],
          "routes": [
            {
              "name": "Validator Mediator Route",
              "host": "hl7-validator",
              "port": "80",
              "primary": true,
              "type": "http",
              "path": "/api/hl7-validation-requests"
            }
          ],
          "allow": [
            "HL7-role"
          ]
        }
      ],
      "endpoints": [
        {
          "name": "validatorRoute",
          "host": "hl7-validator",
          "path": "/api/hl7-validation-requests",
          "port": "80",
          "primary": true,
          "type": "http"
        }
      ]
    }
  }
}
